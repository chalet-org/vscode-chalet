{
	"name": "chalet-tools",
	"displayName": "chalet-tools",
	"description": "Chalet tools",
	"version": "0.0.1",
	"license": "UNLICENSED",
	"engines": {
		"vscode": "^1.58.2"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:chalet-tools.runChalet",
		"onCommand:chalet-tools.chaletCommand",
		"onCommand:chalet-tools.buildToolchain",
		"onCommand:chalet-tools.buildArchitecture",
		"onCommand:chalet-tools.buildConfiguration",
		"onCommand:chalet-tools.makeDebugBuild",
		"workspaceContains:**/chalet.json",
		"workspaceContains:**/.chaletrc",
		"onFileSystem:chalet-schema"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "jsonc",
				"extensions": [
					".chaletrc",
					".chaletconfig"
				],
				"filenames": [
					".chaletrc",
					".chaletconfig"
				]
			}
		],
		"configuration": {
			"title": "Chalet Tools",
			"properties": {
				"chalet-tools.useDebugChalet": {
					"type": "boolean",
					"default": false,
					"description": "Use chalet-debug instead of chalet in commands"
				},
				"chalet-tools.targetArchitectures": {
					"type": "array",
					"description": "A list of target architecture triples to pick from in the status bar.",
					"uniqueItems": true,
					"items": {
						"type": "string"
					}
				}
			}
		},
		"commands": [
			{
				"command": "chalet-tools.runChalet",
				"title": "Chalet Tools: Run Chalet Command"
			},
			{
				"command": "chalet-tools.chaletCommand",
				"title": "Chalet Tools: Change Chalet Command"
			},
			{
				"command": "chalet-tools.buildToolchain",
				"title": "Chalet Tools: Change Build Toolchain"
			},
			{
				"command": "chalet-tools.buildArchitecture",
				"title": "Chalet Tools: Change Build Architecture"
			},
			{
				"command": "chalet-tools.buildConfiguration",
				"title": "Chalet Tools: Change Build Configuration"
			},
			{
				"command": "chalet-tools.makeDebugBuild",
				"title": "Chalet Tools: Make Debug Build"
			}
		],
		"jsonValidation": [
			{
				"fileMatch": [
					"chalet.json",
					"chalet.*.json",
					"chalet-*.json"
				],
				"url": "chalet-schema:///schema-chalet-json"
			},
			{
				"fileMatch": [
					".chaletrc",
					".chaletconfig"
				],
				"url": "chalet-schema:///schema-settings-json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./src",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./src",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/vscode": "^1.58.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"bind-decorator": "^1.0.11",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"prettier": "^2.3.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	},
	"dependencies": {
		"tree-kill": "^1.2.2"
	}
}