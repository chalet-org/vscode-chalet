{
	"name": "chalet-tools",
	"displayName": "Chalet",
	"description": "Support for Chalet projects in Visual Studio Code",
	"version": "0.3.0",
	"publisher": "rewrking",
	"license": "BSD-3-Clause",
	"icon": "chalet-logo.png",
	"bugs": {
		"url": "https://github.com/chalet-org/chalet-tools/issues",
		"email": "andrew.raymond.king@gmail.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/chalet-org/chalet-tools.git"
	},
	"engines": {
		"vscode": "^1.63.1"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:c",
		"onLanguage:cpp",
		"onLanguage:json",
		"onLanguage:jsonc",
		"onCommand:chalet-tools.runChalet",
		"onCommand:chalet-tools.chaletCommand",
		"onCommand:chalet-tools.buildToolchain",
		"onCommand:chalet-tools.buildArchitecture",
		"onCommand:chalet-tools.buildConfiguration",
		"onCommand:chalet-tools.makeDebugBuild",
		"onCommand:chalet-tools.initializeProject",
		"onCommand:chalet-tools.initializeCMakeProject",
		"workspaceContains:**/chalet.json",
		"workspaceContains:**/.chaletrc",
		"onFileSystem:chalet-schema"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "jsonc",
				"extensions": [
					".chaletrc",
					".chaletconfig"
				],
				"filenames": [
					".chaletrc",
					".chaletconfig"
				]
			}
		],
		"configuration": {
			"title": "Chalet Tools",
			"properties": {
				"chalet-tools.useDebugChalet": {
					"type": "boolean",
					"default": false,
					"description": "Use chalet-debug instead of chalet in commands"
				},
				"chalet-tools.enableStatusBarButtons": {
					"type": "boolean",
					"default": true,
					"description": "Display chalet actions in the status bar"
				}
			}
		},
		"commands": [
			{
				"command": "chalet-tools.runChalet",
				"title": "Chalet: Run Chalet Command"
			},
			{
				"command": "chalet-tools.chaletCommand",
				"title": "Chalet: Change Chalet Command"
			},
			{
				"command": "chalet-tools.buildToolchain",
				"title": "Chalet: Change Build Toolchain"
			},
			{
				"command": "chalet-tools.buildArchitecture",
				"title": "Chalet: Change Build Architecture"
			},
			{
				"command": "chalet-tools.buildConfiguration",
				"title": "Chalet: Change Build Configuration"
			},
			{
				"command": "chalet-tools.makeDebugBuild",
				"title": "Chalet: Make Debug Build"
			},
			{
				"command": "chalet-tools.initializeProject",
				"title": "Chalet: Initialize Project"
			},
			{
				"command": "chalet-tools.initializeCMakeProject",
				"title": "Chalet: Initialize Project with CMake"
			}
		],
		"jsonValidation": [
			{
				"fileMatch": [
					"chalet.json",
					"chalet.*.json",
					"chalet-*.json"
				],
				"url": "chalet-schema:///schema-chalet-json"
			},
			{
				"fileMatch": [
					".chaletrc",
					".chaletconfig"
				],
				"url": "chalet-schema:///schema-settings-json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run build",
		"build": "tsc -p ./src",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./src",
		"pretest": "yarn run build && yarn run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/lodash": "^4.14.178",
		"@types/mocha": "^9.0.0",
		"@types/node": "17.0.8",
		"@types/vscode": "^1.63.1",
		"@typescript-eslint/eslint-plugin": "^5.9.1",
		"@typescript-eslint/parser": "^5.9.1",
		"eslint": "^8.6.0",
		"mocha": "^9.1.3",
		"prettier": "^2.5.1",
		"typescript": "^4.5.4",
		"vscode-test": "^1.6.1"
	},
	"dependencies": {
		"bind-decorator": "^1.0.11",
		"glob": "^7.2.0",
		"lodash": "^4.17.21",
		"tree-kill": "^1.2.2"
	}
}